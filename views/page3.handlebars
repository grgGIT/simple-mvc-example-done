  <!-- Form to create a new Dog -->
  <form action="/dogs/create" method="POST">
    <label for="dogName">Dog name: </label>
    <input type="text" name="name" required>
    <label for="breedName">Breed Name: </label>
    <input type="text" name="breed" required>
    <label for="age">Age: </label>
    <input type="number" name="age" min="0" required>
    <input type="submit" value="Create Dog">
  </form>
  
  <br/>
  <br/>
  
  <!-- Form to find a Dog by name and increase its age -->
  <form action="/dogs/increaseAge" method="POST">
    <label for="name">Name to search for:</label>
    <input type="text" name="name" required>
    <input type="submit" value="Increase Age">
  </form>

</body>
